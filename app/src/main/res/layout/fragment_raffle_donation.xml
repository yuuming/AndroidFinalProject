<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.techtator.berdie.raffleDonation.RaffleDonationFragment"
    android:background="@color/background_color"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ticket_gray"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:id="@+id/donor_txt_buy_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/librefranklin_bold"
        android:text="DONATION"
        android:textSize="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="90dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <SeekBar
        android:id="@+id/donor_seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_control"
        android:layout_height="60dp"
        android:layout_width="200dp"
        android:max="101"
        android:min="1"
        android:progress="1"
        app:layout_constraintTop_toBottomOf="@id/donor_txt_buy_tickets"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
         />
    <TextView
        android:id="@+id/donor_amount_to_be_donated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donor_seekBar"
        android:text="1"
        />
    <Button
        android:layout_height="wrap_content"
        android:id="@+id/button_decrement"
        android:layout_width="100dp"
        android:fontFamily="@font/librefranklin_bold"
        android:text="-"
        android:textSize="30dp"
        android:backgroundTint="@color/lightblue"
        android:textColor="@color/white"
        android:background="@drawable/button_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donor_amount_to_be_donated"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"/>
    <Button
        android:layout_height="wrap_content"
        android:id="@+id/button_increment"
        android:layout_width="100dp"
        android:fontFamily="@font/librefranklin_bold"
        android:text="+"
        android:textSize="30dp"
        android:backgroundTint="@color/lightblue"
        android:textColor="@color/white"
        android:background="@drawable/button_border"
        app:layout_constraintLeft_toRightOf="@id/button_decrement"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donor_amount_to_be_donated"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        />
    <Button
        android:id="@+id/donate_tickets_button"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient_green"
        android:textColor="@color/white"
        android:text="@string/donate_tickets"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/button_increment"
        />

</android.support.constraint.ConstraintLayout>
