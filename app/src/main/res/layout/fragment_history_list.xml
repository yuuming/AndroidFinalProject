<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:background="@color/lightblue2">

    <TextView
        android:id="@+id/goal_title_goal_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/librefranklin_bold"
        android:text="Laptop"
        android:textColor="@color/blackGray"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/goal_description_goal_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/librefranklin_regular"
        android:text="Donation from "
        android:textColor="@color/blackGray"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/goal_card_view"
        card_view:contentPadding="2dp"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:id="@+id/progress_text_goal_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goal_bar"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/goal_current_amount"
                    android:layout_marginRight="6dp"
                    android:padding="3dp"
                    android:textColor="@color/darkGray"
                    android:text="@string/dollar"
                    android:fontFamily="@font/librefranklin_bold"
                    android:textSize="26sp"/>
                <TextView
                    android:id="@+id/goal_current_amount_goal_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goal_bar"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/of_text"
                    android:layout_marginRight="6dp"
                    android:padding="2dp"
                    android:textColor="@color/darkGray"
                    tools:text="60,00"
                    android:fontFamily="@font/librefranklin_bold"
                    android:textSize="26sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goal_bar"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/goal_amount"
                    android:padding="2dp"
                    android:textColor="@color/darkGray"
                    android:text="@string/of"
                    android:fontFamily="@font/librefranklin_bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/goal_amount_goal_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goal_bar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:textColor="@color/darkGray"
                    tools:text="100,00"
                    android:fontFamily="@font/librefranklin_bold"
                    android:textSize="22sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/heart_icon_goal_history"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/heart01"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
            <ProgressBar
                android:id="@+id/goal_bar_history"
                xmlns:tools="http://schemas.android.com/tools"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:progressDrawable="@drawable/gradient_progress"
                android:layout_below="@+id/progress_text_goal_history"
                tools:progress="80"
                android:max="100"
                />

            <TextView
                android:id="@+id/number_of_donations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goal_bar_history"
                android:layout_alignParentRight="true"
                android:textSize="14dp"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/darkGray"
                android:text="6 donations"
                android:fontFamily="@font/librefranklin_bold"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/edit_button_goal_history"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_border"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/librefranklin_bold"
            android:textSize="18dp"
            android:textColor="@color/darkGray"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Edit"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/icons8_pencil"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:fontFamily="@font/librefranklin_bold"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@android:color/black" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/goal_history_list"
        android:name="com.techtator.berdie.History.HistoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:context=".history.HistoryFragment"
        tools:listitem="@layout/fragment_history_item"
        android:background="@android:color/white"/>
</LinearLayout>