<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goal_card_view"
    card_view:contentPaddingTop="15dp"
    card_view:contentPaddingBottom="15dp"
    card_view:contentPaddingRight="2dp"
    card_view:contentPaddingLeft="2dp"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/white"
    android:layout_margin="1dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:elevation="12dp"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/photo_find_student"
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="7">

            <TextView
                android:id="@+id/student_name_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/blackGray"
                android:fontFamily="@font/librefranklin_bold"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/student_university_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="UBC"
                android:textSize="12dp"
                android:textColor="@color/lightGray"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>
        <ImageView
            android:id="@+id/to_detail_button_inbox"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_weight="1" />

    </LinearLayout>
</android.support.v7.widget.CardView>
