<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/messageItem_linearlayout_destination"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/messageItem_imageviewProfile"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </android.support.v7.widget.CardView>

        <TextView
            android:background="@drawable/message_bubble_left"
            android:id="@+id/messageItem_messageT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="Message Message Messag"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sent_date_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.10.10"
        android:textSize="10sp"
        android:textColor="@color/lightGray"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
