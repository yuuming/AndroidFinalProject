<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lightblue2"
    tools:context="com.techtator.berdie.studentDonation.StudentDonationFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/librefranklin_bold"
            android:text="Donate to"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/icons8_students" />
            <TextView
                android:id="@+id/name_donation_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/librefranklin_bold"
                android:textSize="22sp"
                android:textColor="@color/pink1"
                android:text="Sayaka Ono"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_dollarMarkADD"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignBaseline="@+id/textView_goalAmountNumADD"
                android:layout_alignBottom="@+id/textView_goalAmountNumADD"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/textView_goalAmountNumADD"
                android:layout_toStartOf="@+id/textView_goalAmountNumADD"
                android:fontFamily="@font/librefranklin_bold"
                android:text="$"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/amount_donation_to_student"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView_goalAmountADD"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/librefranklin_bold"
                android:hint="0"
                android:textSize="35dp"
                android:inputType="number"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/student_donate_button"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:radius="40dp"
        android:background="@drawable/button_gradient_green"
        android:text="DONATE"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/cancel_button_dontation_student"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button_addGoalADD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/text_border"
        android:backgroundTint="@color/green5"
        android:fontFamily="@font/librefranklin_medium"
        android:text="cancel"
        android:textColor="@color/green4"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

